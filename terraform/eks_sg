# Security Group for EKS Cluster
resource "aws_security_group" "eks_sg" {
  name = "eks-sg"
  description = "Security group for bottlerocket EKS cluster"

  ingress {
    from_port = 0
    to_port   = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port = 0
    to_port   = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}